<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/reviews_list_top_bottom_padding"
        android:text="Author"
        android:textColor="@color/reviewsAuthorNameColor"
        android:textSize="@dimen/subtitle_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/reviews_list_top_bottom_padding"
        android:layout_marginLeft="16dp"
        android:paddingLeft="@dimen/reviews_list_top_bottom_padding"
        android:paddingRight="@dimen/reviews_list_top_bottom_padding"
        android:textSize="@dimen/paragraph_text_size"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_right_left"
        android:layout_marginRight="@dimen/margin_right_left"
        android:background="@color/dividerColor"
        android:paddingLeft="@dimen/left_right_padding"
        android:paddingRight="@dimen/left_right_padding"
        />

</LinearLayout>