<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.squirrel.popularmoviesapp.FilmDetailActivity"
    tools:showIn="@layout/activity_film_detail">

    <include
        android:id="@+id/application_toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/detail_textview"
        android:layout_below="@+id/application_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/application_toolbar"
        android:src="@drawable/placeholder"
        android:padding="@dimen/film_details_poster_margin"/>

</RelativeLayout>
